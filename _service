<services>
    <service name="obs_scm">
        <param name="url">https://github.com/huakim/lua2pack.git</param>
        <param name="scm">git</param>
        <param name="revision">main</param>
        <param name="changesgenerate">enable</param>
        <param name="without-version">enable</param>
    </service>
    <service name="py_build"  mode="buildtime">
        <param name="source">lua2pack</param>
    </service>
    <service name="extract_file" mode="buildtime">
        <param name="archive">lua2pack-*.tar.gz</param>
        <param name="file">lua2pack-*/PKG-INFO</param>
    </service>
    <service name="py2pack_generate" mode="buildtime">
        <param name="name">lua2pack</param>
        <param name="localfile">PKG-INFO</param>
    </service>
    <service name="perl_regex" mode="buildtime">
        <param name="file">*.spec</param>
        <param name="regex">s/.*CHOOSE:.*//g;s/(%check)/\1\n%pytest/g;s/(BuildRequires:.*python-rpm-macros.*)/BuildRequires: %{python_module pytest}\n\1/g;</param> 
    </service>
</services>
